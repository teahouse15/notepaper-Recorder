<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox xmlns:fx="http://javafx.com/fxml" styleClass="button-bar" fx:controller="top.myjinji.controller.ButtonController">
    <Button fx:id="addButton" onAction="#addLabel">
        <graphic>
            <FontIcon iconLiteral="anto-plus"/>
        </graphic>
    </Button>
    <Region HBox.hgrow="ALWAYS" />
    <Button fx:id="minButton" onAction="#handleMinButtonClick">
        <graphic>
            <FontIcon iconLiteral="anto-line"/>
        </graphic>
    </Button>
    <Button fx:id="closeButton" onAction="#handleCloseButtonClick">
        <graphic>
            <FontIcon iconLiteral="anto-close"/>
        </graphic>
    </Button>

</HBox>